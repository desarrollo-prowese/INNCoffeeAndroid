<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_inncoffee">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/color_mode_inncoffe_ek14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="58dp">

            <ImageView
                android:id="@+id/color_mode_inncoffe_ek15"
                android:layout_width="297dp"
                android:layout_height="297dp"
                android:src="@drawable/inncoffeelogo"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="Arial"
                android:gravity="center_vertical|center_horizontal"
                android:text="Nombre"
                android:textColor="@color/facebook_ek1_color"
                android:textSize="21sp"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

            <View
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/edit_text_shape"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="Arial"
                android:gravity="center_vertical|center_horizontal"
                android:text="Correo electrónico"
                android:textColor="@color/facebook_ek1_color"
                android:textSize="21sp"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

            <View
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/edit_text_shape"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="Arial"
                android:gravity="center_vertical|center_horizontal"
                android:text="Contraseña"
                android:textColor="@color/facebook_ek1_color"
                android:textSize="21sp"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

            <View
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/edit_text_shape"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="Arial"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/repetir_contrase_a_string"
                android:textColor="@color/facebook_ek1_color"
                android:textSize="21sp"
                tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields" />

            <View
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/edit_text_shape"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            tools:ignore="UselessLeaf">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_button_shape"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="Arial"
                android:gravity="center_vertical|center_horizontal"
                android:text="Crear cuenta"
                android:textColor="@color/facebook_ek1_color"
                android:textSize="25sp"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>