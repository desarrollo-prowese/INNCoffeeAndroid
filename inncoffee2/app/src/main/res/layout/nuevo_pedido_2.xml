<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonCartaDesayuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Carta Desayuno"
            app:layout_constraintBottom_toTopOf="@+id/buttonCartaComida"
            app:layout_constraintStart_toStartOf="@+id/buttonCartaComida"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <Button
            android:id="@+id/buttonCartaComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Carta Comidas"
            app:layout_constraintBottom_toTopOf="@+id/buttonElegirAlergia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCartaDesayuno" />

        <Button
            android:id="@+id/buttonElegirAlergia"
            android:layout_width="338dp"
            android:layout_height="90dp"
            android:layout_marginBottom="33dp"
            android:text="Â¿Tienes Algun tipo de alergia alimentaria?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCartaComida" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="171dp"
            android:layout_height="0dp"
            android:layout_marginTop="98dp"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonCartaDesayuno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/color_mode_inncoffe_ek1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>