<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/_bg__mis_ofertas_ek4_shape" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="101dp"
                android:layout_marginTop="23dp"
                android:fontFamily="Arca Majora 3"
                android:gravity="center_horizontal|center_vertical"
                android:text="QUIERO"
                android:textColor="@color/quiero_color"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/_bg__mis_ofertas_ek4_shape" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="101dp"
                android:layout_marginTop="23dp"
                android:fontFamily="Arca Majora 3"
                android:gravity="center_horizontal|center_vertical"
                android:text="PAGO Y GANO"
                android:textColor="@color/quiero_color"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/_bg__mis_ofertas_ek4_shape" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="101dp"
                android:layout_marginTop="23dp"
                android:fontFamily="Arca Majora 3"
                android:gravity="center_horizontal|center_vertical"
                android:text="MIS OFERTAS"
                android:textColor="@color/quiero_color"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/_bg__mis_ofertas_ek4_shape" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="101dp"
                android:layout_marginTop="23dp"
                android:fontFamily="Arca Majora 3"
                android:gravity="center_horizontal|center_vertical"
                android:text="MIS PUNTOS"
                android:textColor="@color/quiero_color"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="307dp">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="900dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:background="#00E91E63"
                android:backgroundTintMode="src_in"
                app:srcCompat="@drawable/enmascarar_grupo_3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="177dp"
                android:layout_marginBottom="109dp"
                android:scaleType="centerInside"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@drawable/trazado_52" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
