<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="402dp"
            android:layout_height="599dp">

            <Button
                android:id="@+id/buttonAnadir"
                android:layout_width="380dp"
                android:layout_height="0dp"
                android:layout_marginStart="49dp"
                android:layout_marginEnd="49dp"
                android:layout_marginBottom="18dp"
                android:text="AÃ±adir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.671"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewSuma"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageViewSuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="461dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="48dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonAnadir"
                app:layout_constraintEnd_toStartOf="@+id/textViewCantidad"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/imageViewResta"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="85dp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonAnadir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewCantidad"
                app:srcCompat="@android:drawable/button_onoff_indicator_on" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="326dp"
                android:layout_height="156dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDescri"
                android:layout_width="216dp"
                android:layout_height="87dp"
                android:layout_marginTop="128dp"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView11" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="204dp"
                android:layout_height="35dp"
                android:layout_marginTop="180dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.469"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="167dp"
                android:layout_height="51dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="74dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescri" />

            <TextView
                android:id="@+id/textViewCantidad"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="9dp"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewSuma"
                app:layout_constraintEnd_toStartOf="@+id/imageViewResta"
                app:layout_constraintStart_toEndOf="@+id/imageViewSuma"
                app:layout_constraintTop_toTopOf="@+id/imageViewSuma"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textViewListaA"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="522dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/buttonAnadir"
                app:layout_constraintStart_toStartOf="@+id/buttonAnadir"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</HorizontalScrollView>