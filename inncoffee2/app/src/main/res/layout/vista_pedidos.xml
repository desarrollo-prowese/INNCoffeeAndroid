<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/background_inncoffee"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/imageView6"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/inncoffeelogo"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/buttonNuevoPedido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="70dp"
        tools:ignore="UselessLeaf">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_button_shape"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="Arial"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/nuevo_pedido_string"
            android:textColor="@color/facebook_ek1_color"
            android:textSize="25sp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonMisPedidos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        tools:ignore="UselessLeaf">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_button_shape"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="Arial"
            android:gravity="center_vertical|center_horizontal"
            android:text="Mis Pedidos"
            android:textColor="@color/facebook_ek1_color"
            android:textSize="25sp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

    </RelativeLayout>

</LinearLayout>