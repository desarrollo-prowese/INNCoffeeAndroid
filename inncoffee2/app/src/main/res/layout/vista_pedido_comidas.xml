<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonFinalizarPedido"
            android:layout_width="346dp"
            android:layout_height="44dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="2dp"
            android:text="@string/finalizar_pedido_string"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="182dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="470dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonFinalizarPedido"
            app:layout_constraintEnd_toEndOf="@+id/listView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/color_mode_inncoffe_ek1" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="353dp"
            android:layout_height="97dp"
            android:layout_marginBottom="8dp"
            android:background="#00040000"
            app:layout_constraintBottom_toTopOf="@+id/textViewPtotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewPtotal"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="100dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/listView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/textViewContinuaComida"
            android:layout_width="193dp"
            android:layout_height="73dp"
            android:layout_marginTop="288dp"
            android:text="COMIDAS"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>